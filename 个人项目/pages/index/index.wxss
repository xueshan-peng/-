/**index.wxss**/

.index_tab_box{
	height: 83rpx;
	display: flex;
	border-bottom:2rpx solid rgb(206,206,206);
	align-items: center;
}

.index_tab_box .tab_items{
	width:50%;
	height:83rpx;
	display: flex;
	align-items: center;
	justify-content: center;
}

.index_tab_box .tab_items text{
	padding:0 16rpx;
	height: 80rpx;
	line-height: 80rpx;
	font-size: 30rpx;
	color:#999999;
	position: relative;
}

.index_tab_box .tab_items.on text{
	border-bottom: 6rpx	solid #FF5168;
	color:black;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
}

.header_view_hide{
  display: none;
}

.header_view_show{
  display: block;
}

.no-data{
    padding: 80rpx 0;
    font-size: 28rpx;
    text-align:center;
}


.photolist{
  margin-top: 20rpx;
}
.photo-list-info{
  /*float: left;*/
  margin-left: 20rpx;
  margin-top: 20rpx;
  /*position: relative;*/
}
 
.photo-list-photo{
  width: 360rpx;
  height: 250rpx;
}

.edit_list_container{
	margin:0 35rpx;
}	

.edit_list{
	border:1rpx solid rgb(206,206,206);
	box-sizing: border-box;
	padding:35rpx;
	position: relative;
	border-radius: 10rpx;
	margin-bottom: 30rpx;
}

.del_btn{
	width: 32rpx;
	height: 32rpx;
	position: absolute;
	top: -20rpx;
	left: -20rpx;
	background-color:white;
	padding:6rpx;
}

.edit_list_cont{
	position: relative;
	padding:0 110rpx 0 220rpx;
}

.edit_list_cont > image{
	width: 200rpx;
	height: 200rpx;
	top: 0;
	left:0;
	position: absolute;
}

.edit_list_txt{
  width: 100%;
	display: block;
	height: 200rpx;
	color:#999999;
}

.line{
width:100%;
height:2rpx;
background:#aaa;
}


.move_box{
	width: 150rpx;
	height: 100%;
	position: absolute;
	right: 0;
	top: 0;
}
.moveable{
	position: absolute;
	right:0;
}
.move_up{
	top:0;
}
.move_down{
	bottom:0;
}

.moveable{
	display: flex;
	align-items: center;
}

.moveable image{
	width: 36rpx;
	height: 36rpx;
}
.moveable text{
	margin-left: 10rpx;
  color:#999999;
}