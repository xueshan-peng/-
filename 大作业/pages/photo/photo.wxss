/* pages/photo/photo.wxss */
page{
  height: 100%;
  /*background: rgba(235, 202, 232, 0.5);*/
}

.tags_banner_box{
	width: 100%;
	height: 200rpx;
	position: relative;
}

.tags_banner_box > image{
	width: 100%;
	height: 200rpx;
	display: block;
}

.tags_box{
	position: absolute;
	bottom: 60rpx;
  left: 60rpx;
}

.tags{
  padding: 10rpx;
  font-size: 60rpx;
	position: relative;
	/*width: 200rpx;*/
	/*height: 80rpx;*/
	line-height: 50rpx;
	text-align: center;
	background-color: rgba(255,255,255,.8);
	float: center;
  border-radius: 6rpx;
  border-bottom: #ff5168 solid 1rpx;
}

.tags > image {
  width: 50rpx;
	height: 50rpx;
}

.add {
  background: white;
  display: flex;
	align-items: center;
	justify-content: center;
	border:1px solid #979797;
	border-radius:100px;
	width: 40px;
  height: 80rpx;
	position: fixed;
  z-index:999;
  bottom:.5em;
  right: .5em;
	color:#333;
  margin:0 0 0 0.5em;
  padding:0 1em;
}

.add image{
	width: 40rpx;
	height: 40rpx;
}

.header_view_hide{
  display: none;
}

.header_view_show{
  display: block;
}

.info_main_box{
    /*background:rgba(255, 128, 128, 0.201);*/
    border:1rpx solid rgb(146, 138, 138);
    border-radius: 10rpx;
    margin:30rpx;
    cursor: pointer;
}

.info_main_box > image{
    margin: 15rpx;
    width: 96%;
    display: block;
    height: 455rpx;
}

.info_desc_box{
    margin:0 30rpx;
}

.info_txt{
    font-size: 28rpx;
    margin:30rpx 0;

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    overflow: hidden;
}

.info_footer_box{
    border-top: 1rpx solid rgb(146, 138, 138);
    display: flex;
    padding:30rpx 0;
}

.info_footer_box > image{
    width: 90rpx;
    height:90rpx;
    border-radius: 50%;
}

.user_info_box{
    width: 220rpx;
    height: 120rpx;
    display: flex;
    flex-direction: column;
}

.user_info_box text{
    line-height: 50rpx;
    padding:0 16rpx;
}

.name_txt{
    color:black;
    font-size: 28rpx;
}

.date_txt{
    color:rgb(146, 138, 138);
    font-size: 24rpx;
}

.count_box{
    flex:1;
    display: flex;
    align-items: center;
}

.count_info_content{
    flex:1;
    text-align: right;
}

.count_info_content image{
    width: 30rpx;
    height: 30rpx;
}

.count_info_content text{
    font-size: 24rpx;
    color:rgb(146, 138, 138);
  line-height: 30rpx;
  height: 30rpx;
  margin-left: 6rpx;
}